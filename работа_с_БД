-- Вывести список логинов курьеров с количеством их заказов в статусе «В доставке»
SELECT c.login, COUNT(o."courierId") FROM "Couriers" as c JOIN "Orders" as o ON c.id = o."courierId" WHERE o."inDelivery" = true GROUP BY c.login;

-- Вывести все трекеры заказов и их статусы
SELECT track, CASE WHEN finished = true THEN 2 WHEN cancelled = true THEN -1 WHEN "inDelivery" = true THEN 1 ELSE 0 END AS status FROM "Orders";
